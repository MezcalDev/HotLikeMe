<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="qapp.Login"
			 Title="Login">

	<ContentPage.Content>
		<StackLayout VerticalOptions="StartAndExpand">
		    <Label Text=""/><Label Text=""/><Label Text=""/>
		    <Label Text=""/><Label Text=""/><Label Text=""/>

		    <Label Text="Test Login"
		    Font="Large"
		    HorizontalOptions="Center"
		    XAlign="Center"
		    Rotation="-15"
		    IsVisible="true"
		    VerticalOptions="CenterAndExpand"
		    FontAttributes="Bold"
		    TextColor="black"/>

		    <Label Text=""/><Label Text=""/><Label Text=""/>
		    <Label Text=""/><Label Text=""/><Label Text=""/>

			<Label Text="Username" TextColor="Blue"/>
			<Entry x:Name="usernameEntry" Placeholder="username" />

			<Label Text="Password" TextColor="Blue"/>
			<Entry x:Name="passwordEntry" Placeholder="password" IsPassword="true" />

			<Button x:Name="loginButton" Text="Log In" Clicked="OnSignIn" />
			<Button Text="Sign Up" Clicked="OnRegister" />

			<Label x:Name="messageLabel" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
